<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMaintainProductsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image_maintain"
                android:layout_alignParentStart="true"
                android:text="Product Image"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/product_image_maintain"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="30dp"

                android:scaleType="centerCrop"
                android:scrollbars="horizontal|vertical" />

            <TextView
                android:id="@+id/product_name_maintain_txtView"
                android:layout_width="264dp"
                android:layout_height="26dp"
                android:layout_below="@+id/product_image_maintain"
                android:layout_alignParentStart="true"
                android:text="Product Name"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/product_name_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_maintain_txtView"
                android:background="@drawable/input_design"
                android:hint="Product Name"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/product_price_maintain_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_maintain"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:text="Product Price"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/product_price_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price_maintain_txtView"
                android:layout_margin="5dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_design"
                android:hint="Product Price"
                android:inputType="number|numberDecimal"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/product_price_maintain_txtView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_maintain"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:text="Product Quantity"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/product_quantity_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price_maintain_txtView"
                android:layout_margin="5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/input_design"
                android:hint="Product Quantity"
                android:inputType="number"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/product_description_maintain_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price_maintain"
                android:layout_alignParentStart="true"

                android:layout_marginTop="16dp"
                android:text="Product Description"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/product_description_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description_maintain_txtView"
                android:layout_margin="5dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_design"
                android:hint="Product Description"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <Button
                android:id="@+id/apply_changes_btn"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/product_description_maintain"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttons"
                android:text="Apply Changes"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/delete_product_btn"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_below="@+id/apply_changes_btn"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttons"
                android:text="Delete this Product"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>