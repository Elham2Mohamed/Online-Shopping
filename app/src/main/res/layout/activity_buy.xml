<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BuyActivity">


    <TextView
        android:id="@+id/shippment_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Please write your shippment details"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/shippment_userName"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:hint="  Your Name"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"></EditText>

    <EditText
        android:id="@+id/shippment_userPhoneNumber"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_below="@id/shippment_userName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design"
        android:hint="  Phone Number"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippment_userName"></EditText>

    <EditText
        android:id="@+id/shippment_userHomeAddress"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_below="@id/shippment_userdate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/input_design"
        android:hint="   Home Address"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippment_userdate"></EditText>

    <TextView
        android:id="@+id/shippment_userdate"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_below="@id/shippment_userPhoneNumber"
        android:layout_alignParentStart="true"
        android:background="@drawable/input_design"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:hint="   Date"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippment_userPhoneNumber"></TextView>

    <Button
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit"
        app:layout_constraintVertical_bias="0.555" />

    <Button
        android:id="@+id/submit"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_userHomeAddress"
        android:layout_alignStart="@+id/shippment_userHomeAddress"
        android:layout_alignEnd="@+id/shippment_userHomeAddress"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttons"
        android:foregroundGravity="center_horizontal"
        android:text="Set Location"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippment_userHomeAddress" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shippment_txt"
        app:srcCompat="@drawable/shp" />
</androidx.constraintlayout.widget.ConstraintLayout>
